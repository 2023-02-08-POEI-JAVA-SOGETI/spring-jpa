		<property name="monDao" ref="monDao" />
	</bean>
	
	<bean id="monDao"
		class="exercice1_spring.service.MonDao">
		<!-- La configuration de monBean1 est là -->
	</bean>

	<!-- On peut rajouter autant de beans que l’on veut ... -->
